{
  "base_model": "meta-llama/Llama-3.2-1B-Instruct",
  "output_name": "my-llama-model",

  "dataset": {
    "source": {
      "source_type": "huggingface",
      "repo_id": "schneewolflabs/Athanor-DPO",
      "split": "train"
    },
    "format": {
      "format_type": "tokenizer"
    },
    "test_size": 0.01,
    "max_samples": 100
  },

  "lora_r": 64,
  "lora_alpha": 32,
  "lora_dropout": 0.05,
  "learning_rate": 5e-6,
  "num_epochs": 1,
  "batch_size": 1,
  "gradient_accumulation_steps": 16,
  "max_length": 2048,
  "max_prompt_length": 1024,
  "beta": 0.1,
  "use_4bit": true,
  "use_wandb": false,
  "push_to_hub": false
}
