{
  "base_model": "meta-llama/Llama-3.2-1B-Instruct",
  "output_name": "my-first-model",

  "dataset": {
    "source": {
      "source_type": "huggingface",
      "repo_id": "schneewolflabs/Athanor-DPO",
      "split": "train"
    },
    "format": {
      "format_type": "tokenizer"
    },
    "test_size": 0.01,
    "max_samples": 100
  },

  "lora_r": 64,
  "lora_alpha": 32,
  "learning_rate": 5e-6,
  "num_epochs": 1,
  "use_4bit": true,
  "use_wandb": false
}
